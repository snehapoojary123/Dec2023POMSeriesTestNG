<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Regression Suite" thread-count="4"
	parallel="tests" verbose="4">
	
	<test name="Login Page Test_chrome">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.test.LoginPageTest" />
						
		</classes>
	</test>
	<test name="Login Page Test_firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.opencart.test.LoginPageTest" />
						
		</classes>
	</test>
	<test name="Registration Page Test_chrome">
	<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.test.RegistrationPageTest" />
		</classes>
	</test>
	
	<test name="Accounts Page Test_firefox">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="com.qa.opencart.test.AccountsPageTest" />
		</classes>
	</test>
	
	<test name="Product Info Page Test_edge">
		<parameter name="browser" value="edge" />
		<parameter name="testcasename" value="Product Page Test" />
		<classes>
			<class name="com.qa.opencart.test.ProductInfoPageTest" />
		</classes>
	</test>
	
	
	
	<listeners>
		<listener
			class-name="com.qa.opencart.listeners.ExtentReportListener" />
			<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
			<listener
			class-name="com.qa.opencart.listeners.TestAllureListener" />
		
	</listeners>

